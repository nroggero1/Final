@model List<Final.Models.Compra>
@{
    ViewData["Title"] = "Lista de compras";
}

<div class="container-lg col-4">
    <h1>Todas las compras</h1>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" id="" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Fecha</th>
                    <th>Usuario</th>
                    <th>Proveedor</th>
                    <th>Importe</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var compra in Model)
                {
                    <tr>
                        <td>@compra.Id</td>
                        <td>@compra.Fecha</td>
                        <td>@compra.IdUsuario</td>
                        <td>@compra.IdProveedor</td>
                        <td>@compra.Importe</td>
                        <td>
                            <a asp-action="ConsultarCompra" asp-route-id="@compra.Id">Detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros</p>
    }
</div>