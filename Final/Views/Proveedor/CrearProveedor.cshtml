@model Final.Models.Proveedor
@{
    ViewData["Title"] = "Crear proveedor";
}

<div class="container-lg col-4">
    <h1>Registrar Proveedor</h1>
    <form asp-action="CrearProveedor" method="POST">
        <!-- Nombre -->
        <div class="input-group mb-3">
            <label asp-for="CodigoTributario" class="input-group-text">Codigo Tributario</label>
            <input asp-for="CodigoTributario" type="text" class="form-control" placeholder="Ingresar codigo tributario" id="codigoTributario">
        </div>
        <div class="input-group mb-3">
            <label asp-for="Direccion" class="input-group-text">Direccion</label>
            <input asp-for="Direccion" type="text" class="form-control" placeholder="Ingresar direccion tributario" id="codigoTributario">
        </div>
 

        <!-- Buscador de localidad -->
        <!--
        <div class="input-group mb-3">
            <label asp-for="IdLocalidad" class="input-group-text">Localidad</label>
            <input asp-for="IdLocalidad" type="search" class="form-control" placeholder="Ingrese el codigo postal" id="CodigoPostal">
        </div>
        -->




        <div class="input-group mb-3">
            <label asp-for="Telefono" class="input-group-text">Telefono</label>
            <input asp-for="Telefono" type="tel" class="form-control" placeholder="Ingrese el telefono" id="telefono">
        </div>
        <div class="input-group mb-3">
            <label asp-for="Mail" class="input-group-text">Mail</label>
            <input asp-for="Mail" type="email" class="form-control" placeholder="Ingrese el mail" id="mail">
        </div>
        <div class="input-group mb-3">
            <label asp-for="Denominacion" class="input-group-text">Denominacion</label>
            <input asp-for="Denominacion" type="text" class="form-control" placeholder="Denominacion" id="denominacion">
        </div>
        <div class="input-group mb-3">
            <label asp-for="FechaAlta" class="input-group-text">Fecha de alta</label>
            <input asp-for="FechaAlta" type="datetime" class="form-control" id="fechaAlta" readonly value="@DateTime.Now">
        </div>
        <div class="input-group mb-3">
            <label asp-for="Activo" class="input-group-text">Activo</label>
            <input asp-for="Activo" type="checkbox" class="form-control" id="activo" readonly value="true">
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>