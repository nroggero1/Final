@model List<Final.Models.Marca>
@{
    ViewData["Title"] = "Lista de marcas";
}

<div class="container-lg col-4">
    <h1>Todas las marcas</h1>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" id="" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Fecha Alta</th>
                    <th>Activo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var marca in Model)
                {
                    <tr>
                        <td>@marca.Id</td>
                        <td>@marca.Nombre</td>
                        <td>@marca.FechaAlta</td>
                        <td>@marca.Activo</td>
                        <td>
                            <a asp-action="EditarMarca" asp-route-id="@marca.Id">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros</p>
    }
</div>
